<form action="/pokemons/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="pokemon[name]">First Name:</label>
  <input name="pokemon[name]" value="<%= @pokemon.name %>">

  <label for="pokemon[cp]">Last Name:</label>
  <input name="pokemon[cp]" value="<%= @pokemon.cp %>">

  <label for="pokemon[poke_type]">Age:</label>
  <input name="pokemon[poke_type]" value="<%= @pokemon.poke_type %>">

  <button type="submit" value="Update">Submit</button>

</form>


